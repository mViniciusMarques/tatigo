<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/purple2"
        tools:context=".view.CadastroUsuarioActivity">


    <android.support.v7.widget.CardView
            android:id="@+id/myCardView"
            android:layout_width="347dp"
            android:layout_height="477dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"
            app:cardBackgroundColor="#b6ffffff"
            app:layout_constraintVertical_bias="0.727">


        <EditText
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="Nome"
                android:backgroundTint="#6400b6"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/cadastro_nome"/>

        <EditText
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="email"
                android:backgroundTint="#6400b6"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="140dp"
                android:id="@+id/cadastro_login"/>

        <EditText
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="Senha"
                android:backgroundTint="#6400b6"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="220dp"
                android:id="@+id/cadastro_senha"/>
        <Button
                android:text="Cadastrar"
                android:layout_marginTop="350dp"
                android:layout_marginStart="70dp"
                android:layout_width="200dp"
                android:background="#baffffff"
                android:layout_height="wrap_content"
                android:id="@+id/btn_cadastrar_usuario"/>


    </android.support.v7.widget.CardView>
    <TextView
            android:text="Geovania Go na Play Store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.944"/>
</android.support.constraint.ConstraintLayout>