<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="match_parent"
              android:layout_marginTop="8dp"
>

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_nome_prod"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearance.AppCompat"
            app:errorEnabled="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/lbl_preco"
            app:layout_constraintVertical_bias="0.949">
        <EditText
                android:id="@+id/txt_nome_prod"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:textColorHint="#000"
                android:imeOptions="actionNext"
                android:hint="Produto"
        />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_preco"
            android:layout_width="300dp"
            android:layout_height="75dp"
            app:hintTextAppearance="@style/TextAppearance.AppCompat"
            app:errorEnabled="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/lbl_desconto">
        <EditText
                android:id="@+id/txt_preco"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:inputType="textEmailAddress"
                android:textColorHint="#000"
                android:imeOptions="actionNext"
                android:hint="Valor"
        />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_desconto"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearance.AppCompat"
            app:errorEnabled="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/checkBox">
        <EditText
                android:id="@+id/txt_desconto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:textColorHint="#000"
                android:imeOptions="actionNext"
                android:hint="Desconto"
        />
    </android.support.design.widget.TextInputLayout>

    <CheckBox
            android:id="@+id/checkBox"
            android:text="ativar"
            android:layout_width="300dp"
            android:layout_height="41dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <Button
            android:text="Button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:id="@+id/button3"/>


</LinearLayout>
