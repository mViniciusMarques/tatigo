<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.LoginActivity">


    <ec.dina.btefonts.TextViewFonts
            android:layout_width="373dp"
            android:layout_height="148dp"
            android:text="Tati's Cafe"
            android:textColor="#000"
            android:textSize="70sp"
            app:dm_font="kittenMonoline" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.636" app:layout_constraintVertical_bias="0.044"
            android:textAlignment="center" android:id="@+id/textViewFonts"/>
    <EditText
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Login de rede"
            android:backgroundTint="#000"
            android:textColorHint="#000"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="148dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewFonts" app:layout_constraintHorizontal_bias="0.513"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.071"
            app:layout_constraintHorizontal_bias="0.52"/>
    <ImageView
            android:layout_width="374dp"
            android:layout_height="120dp" app:srcCompat="@drawable/purpledivider"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="188dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.644"/>
    <Button
            android:text="Entrar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.21"/>


</android.support.constraint.ConstraintLayout>